<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bbbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#142DB5"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/bbbg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/doNotMissTheBall"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_above="@id/play"
        android:layout_below="@id/highScoreTxt"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="30dp"
        android:text="@string/do_not_miss_the_ball"
        android:textColor="#ffffffff"
        android:textSize="48sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:textSize="64sp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:id="@+id/play"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24sp"
        android:text="@string/high_score"
        android:id="@+id/highScoreTxt"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap"
    />
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="TODO"
        android:layout_margin="16dp"
        android:id="@+id/volumeCtrl"
        android:src="@drawable/ic_baseline_volume_up_24"
    />


</RelativeLayout>